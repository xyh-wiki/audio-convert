{
  "version": "1.0.0",
  "name": "audio-convert",
  "description": "Online audio & video converter running in the browser",
  "buildCommand": "npm run build",
  "startCommand": "node scripts/serve-with-headers.js",
  "installCommand": "npm install",
  "port": 3000,
  "env": {
    "NODE_ENV": "production"
  },
  "dockerfile": "Dockerfile",
  "healthCheck": {
    "enabled": true,
    "interval": 30,
    "timeout": 10,
    "startPeriod": 5,
    "retries": 3,
    "command": "curl -f http://localhost:3000 || exit 1"
  }
}
